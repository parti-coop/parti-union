#bloc-1.bloc.full-width-bloc.bgc-white.l-bloc
  .container
    .row
      .col-sm-12
        #carousel-1.carousel.no-shadows.slide{"data-ride" => "carousel"}
          %ol.carousel-indicators
            %li.active{"data-slide-to" => "0", "data-target" => "#carousel-1"}
            %li{"data-slide-to" => "1", "data-target" => "#carousel-1"}
            %li{"data-slide-to" => "2", "data-target" => "#carousel-1"}
          .carousel-inner
            - @slides.each_with_index do |slide, index|
              .item{class: "#{'active' if index == 0}"}
                = image_tag slide.image.url
                .carousel-caption
                  - if slide.title.present?
                    %h1.mg-md
                      = slide.title
                  - if slide.body.present?
                    %p.text-center
                      = slide.body
          %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-1", :role => "button"}
            %span.fa.fa-chevron-left
            %span.sr-only Previous
          %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-1", :role => "button"}
            %span.fa.fa-chevron-right
            %span.sr-only Next
