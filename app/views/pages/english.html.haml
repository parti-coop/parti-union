:scss
  #page-english {
    .platforms .slide {
      margin-left: 0;
      width: initial;
      .card {
        position: relative;
        height: 400px;
        width: 100%;
        .description {
          position: absolute;
          bottom: 0;
          background: rgba(0, 0, 0, 0.4);
          width: 100%;
        }
        .image {
          background-position: center;
          background-size: cover;
          width: 100%;
          height: 100%;
        }
        .maintext {
          color: white;
          font-size: 18px;
        }
        .download {
          position: static;
        }
      }

      .owl-nav {
        @media (max-width: 768px) {
          margin-top: 0;
        }
        .owl-prev {
          left: -30px;
        }
        .owl-next {
          right: -30px;
        }
        .owl-prev,
        .owl-next {
          width: 20px;
          color: #777;
          @media (max-width: 768px) {
            position: static;
            font-size: 24px;
          }
        }
      }
    }
    .toolkit .book {
      background-size: cover;
      background-position: center;
    }
  }
